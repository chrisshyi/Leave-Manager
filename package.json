  "dependencies": {
    "@sendgrid/mail": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^4.3.1",
    "config": "^3.2.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.24.0",
    "mongoose": "^5.7.7",
    "nodemon": "^1.19.4"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
